<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>みんなの投稿</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>テニスフリークへようこそ！</h1>

    <h2>
      応援している選手、好きなラケット…あなたの「テニス好き」を皆とシェアしよう！
    </h2>

    <%= link_to "アカウント作成", signup_path, class: "btn btn-lg btn-primary" %>
    
    <span class ="new functions">＜追加機能＞</span>
    
    <div class ="new functions-menu">
      <li>UIの日本語化</li>
      <li>ユーザー検索機能</li>
  </div>
  
  </div>
  
  

  <!-- <%= link_to image_tag("rails.png", alt: "Rails logo"),
              'http://rubyonrails.org/' %> -->
<% end %>