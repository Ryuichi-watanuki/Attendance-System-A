<li>
  <%#= gravatar_for user, size: 50 %>
  
    <div class="panel panel-default" style="width: 80%; margin: auto;">
      <div class="panel-heading">
        <h3 class="panel-title" style="color:white;">
          <p><%= link_to user.name, user, style: "color:black;"%></p>
          <% if current_user.admin? && !current_user?(user) %>
              <%#= link_to "基本情報編集", basic_info_url(params:{id: user.id}), class: "btn btn-sm btn-primary" %>
              <%#= link_to "設定", edit_user_path(user), class: "btn btn-sm btn-primary" %>
              <a class="btn btn-sm btn-primary" style="width: 100px;" data-toggle="collapse" data-parent="#sampleAccordion" href="#sampleAccordionCollapse<%= user.id %>" >
                編集
              </a>
              <%= link_to "削除", user, method: :delete,data: { confirm: "本当に削除してよろしいですか？" }, class: "btn btn-sm btn-danger", style: "width: 100px;"%>
          <% end %>
        </h3>
      </div>
      
      <div id="sampleAccordionCollapse<%= user.id %>" class="panel-collapse collapse">
        <div class="panel-body">
          <%= form_for(user, remote: true, html:{:id => ''}) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <div class="user-edit-accordion-left">
              <%= f.label :名前 %>
              <%= f.text_field :name, class: 'form-control'%>
              
              <%= f.label :employee_number, "社員番号"%>
              <%= f.number_field :employee_number, class: 'form-control' %>
              
              <%= f.label :所属 %>
              <%= f.text_field :affiliation, class: 'form-control' %>
              
              <%= f.label :指定勤務開始時間 %>
              <%= f.time_field :specified_start_time, class: 'form-control'%>
            </div>
            <div class="user-edit-accordion-right">
              <%= f.label :メールアドレス %>
              <%= f.email_field :email, class: 'form-control'%>
              
              <%= f.label :card_id, "カードID"%>
              <%= f.text_field :card_id, class: 'form-control' %>
              
              <%= f.label :基本時間 %>
              <%= f.time_field :basic_time, class: 'form-control' %>
              
              <%= f.label :指定勤務終了時間 %>
              <%= f.time_field :specified_end_time, class: 'form-control'%>
            </div>
            <div class="user-edit-accordion-bottom">
              <%= f.label :パスワード %>
              <%= f.password_field :password, class: 'form-control' %>
              
              <%= f.label :password_confirmation, "パスワード再確認" %>
              <%= f.password_field :password_confirmation, class: 'form-control' %>
              
              <%= f.submit "更新", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
</li>