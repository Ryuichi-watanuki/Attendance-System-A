<li>
  <%#= gravatar_for user, size: 50 %>
  
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title" style="color:white;">
          <%= link_to user.name, user, style: "color:black;" %>
          <% if current_user.admin? && !current_user?(user) %>
            <%= link_to "基本情報編集", basic_info_url(params:{id: user.id}), class: "btn btn-sm btn-primary" %>
            <%#= link_to "設定", edit_user_path(user), class: "btn btn-sm btn-primary" %>
            <a class= " btn btn-sm btn-primary" data-toggle="collapse" data-parent="#sampleAccordion" href="#sampleAccordionCollapse<%= user.id %>" >
              編集
            </a>
            <%= link_to "削除", user, method: :delete,data: { confirm: "本当に削除してよろしいですか？" }, class: "btn btn-sm btn-primary" %>
          <% end %>
        </h3>
      </div>
    <div id=  "sampleAccordionCollapse<%= user.id %>"  class="panel-collapse collapse">
      <div class="panel-body">
</li>