<% provide(:title, "基本情報更新") %>
<h1>基本情報の更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: basic_info_edit_path, method: :post) do |f| %>
      <%= hidden_field_tag :id, @user.id %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :基本時間 %>
      <%= f.time_field :basic_time, class: 'form-control' %>

      <%= f.label :指定勤務開始時間 %>
      <%= f.time_field :specified_start_time, class: 'form-control'%>
      
      <%= f.label :指定勤務終了時間 %>
      <%= f.time_field :specified_end_time, class: 'form-control'%>
      
      <%= f.submit "更新", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>